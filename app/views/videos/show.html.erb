<h1><%= @video.title %></h1>

<h3><%= @video.description %></h3>

<iframe width="420" height="315" src="//www.youtube.com/embed/<%= @video.youtube_id %>" frameborder="0" allowfullscreen></iframe>

<h2>commentz</h2>
<ul>
<% @comments.each do |comment| %>
    <li><%= comment.content %>  <%= link_to 'delete', "/videos/#{@video.title}/#{comment.id}", :method => :delete, :confirm => 'Are you sure?'  %></li>
<% end %>
</ul>

<form action=<%= "/videos/#{params[:title]}" %> method="post">


    <label for="comment">Comment:</label>
    <input type="text" id="comment" name="content">
    <input type="hidden" id="video_id" name="video_id" value="<%= @video.id %>">

    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">

    <input type="submit" value="submit">
</form>

<a href="/videos/<%=@video.title%>/edit">Edit</a>
